{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",                           
    "outDir": "./dist", 
    "removeComments": true,
    "strict": true,                                
    "baseUrl": "./",
    "esModuleInterop": true,                        
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,      
  }
}
